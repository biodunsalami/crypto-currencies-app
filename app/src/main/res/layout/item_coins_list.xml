<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/coin_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="1."
        android:textSize="16sp"
        android:layout_marginTop="22dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/coin_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Bitcoin"
        android:textSize="16sp"
        android:layout_marginStart="4dp"
        app:layout_constraintTop_toTopOf="@+id/coin_number"
        app:layout_constraintBottom_toBottomOf="@+id/coin_number"
        app:layout_constraintStart_toEndOf="@+id/coin_number"/>

    <TextView
        android:id="@+id/coin_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="active"
        android:textSize="14sp"
        android:textColor="@color/green"
        android:layout_marginStart="4dp"
        app:layout_constraintTop_toTopOf="@+id/coin_name"
        app:layout_constraintBottom_toBottomOf="@+id/coin_name"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>